{
  "manifest_version": 3,
  "name": "Real-Time Captions (VOSK)",
  "version": "1.0",
  "description": "Converts audio from Meet, YouTube, and any video into live captions for deaf users.",
  
  "permissions": [
    "tabCapture",
    "scripting",
    "activeTab",
    "storage",
    "offscreen",
    "notifications",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Real-Time Captions"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
